<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>items</key>
      <array>
      <dict>
            <key>PostNotification</key>
            <string>com.joshdoctors.prism/settingschanged</string>
            <key>cell</key>         <string>PSLinkListCell</string>
            <key>defaults</key>     <string>com.joshdoctors.prism</string>
            <key>detail</key>             <string>PSListItemsController</string>
            <key>key</key>                <string>spectrumStyle</string>
            <key>label</key>        <string>Style</string>
            <key>validTitles</key> <array>
                  <string>Linear</string>
                  <string>Linear Symmetric</string>
                  <string>Radial</string>
                  <string>Radial Symmetric</string>
            </array>
            <key>validValues</key>
            <array>
                  <real>0</real>
                  <real>1</real>
                  <real>2</real>
                  <real>3</real>
            </array>
            <key>id</key>
            <string>spectrumStyle</string>
      </dict>
      <dict>
            <key>cell</key>             <string>PSEditTextCell</string>
            <key>defaults</key>         <string>com.joshdoctors.prism</string>
            <key>key</key>              <string>spectrumBarCount</string>
            <key>label</key>            <string>Number of Bars</string>
            <key>PostNotification</key> <string>com.joshdoctors.prism/settingschanged</string>
      </dict>
      <dict>
            <key>cell</key>             <string>PSButtonCell</string>
            <key>label</key>            <string>Save</string>
            <key>action</key>           <string>save</string>
      </dict>
	<dict>
            <key>cell</key>             <string>PSButtonCell</string>
            <key>label</key>            <string>Primary Color</string>
            <key>action</key>           <string>selectPrimaryColor</string>
      </dict>
      <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>footerText</key>
            <string>Default number of bars is 30. The slider determines the height of the bars. The higher the number, the taller the bars. Default is 100 which means the bars will cover the full height of the album art.</string>
      </dict>
      <dict>
            <key>cell</key>
            <string>PSSliderCell</string>
            <key>default</key>
            <integer>100</integer>
            <key>showValue</key>
            <true/>
            <key>max</key>
            <integer>100</integer>
            <key>min</key>
            <integer>0</integer>
            <key>PostNotification</key>
            <string>com.joshdoctors.prism/settingschanged</string>
            <key>defaults</key>
            <string>com.joshdoctors.prism</string>
            <key>key</key>
            <string>barHeight</string>
      </dict>
	</array>
	<key>title</key>
	<string>Spectrum Visualizer Settings</string>
</dict>
</plist>